#include <mpi.h>
#include <stdio.h>

void main(int argc, char** argv){

	int size, rank;
	printf("Initializing MPI\n");

	MPI_Init(&argc, &argv);
	MPI_Comm_size(MPI_COMM_WORLD, &size);
	MPI_Comm_rank(MPI_COMM_WORLD, &rank);

	if(rank%2==0){
		printf("Rank is %d and I say Hello!\n", rank);
	}
	else{
		printf("Rank is %d and I say World!\n", rank);
	}

	MPI_Finalize();
}
