#define CHUNK 1024 /* read 1024 bytes at a time */
#include <stdio.h>
#include<string.h>

int main(){

	FILE * fp;
	char * line = NULL;
	size_t len = 0;
	ssize_t read;

	fp = fopen("file_read.txt", "r");
	if (fp == NULL)
	    exit(0);

	int flag = 0;

	while ((read = getline(&line, &len, fp)) != -1) {

		if(!strcmp("<TEXT>\r\n", line))
	    	flag = 1;
	    else if(!strcmp("</TEXT>\r\n", line))
	    	flag = 0;

	    if(flag==1)
	    	flag = 2;
	    else if(flag == 2)
	    	printf("%s", line);
	}

    fclose(fp);
    if (line)
        free(line);
    exit(1);
}
