#define CHUNK 1024 /* read 1024 bytes at a time */
#include <stdio.h>
#include<string.h>

int main(){

	FILE * fp;
	char * line = NULL;
	size_t len = 0;
	ssize_t read;

	fp = fopen("file_read.txt", "r");
	if (fp == NULL)
	    exit(0);

	while ((read = getline(&line, &len, fp)) != -1) {
	    printf("Retrieved line of length %zu:\n", read);
	    printf("%s", line);
	}

    fclose(fp);
    if (line)
        free(line);
    exit(1);
}
