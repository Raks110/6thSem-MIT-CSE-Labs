#include <mpi.h>
#include <stdio.h>

int main(int argc, char** argv){

	int a=7, b=10, size, rank;

	MPI_Init(&argc, &argv);
	MPI_Comm_size(MPI_COMM_WORLD, &size);
	MPI_Comm_rank(MPI_COMM_WORLD, &rank);

	switch(rank){

	case 1:
		printf("Process %d: %d + %d = %d", rank, a, b, a+b);
		break;
	case 2:
		printf("Process %d: %d - %d = %d", rank, a, b, a-b);
		break;
	case 3:
		printf("Process %d: %d * %d = %d", rank, a, b, a*b);
		break;
	case 4:
		printf("Process %d: %d / %d = %d", rank, a, b, a/b);
		break;
	case 5:
		printf("Process %d: %d \% %d = %d", rank, a, b, a%b);
		break;
	default:
		printf("Process %d: Has not been programmed!", rank);

	}

	MPI_Finalize();
	return 0;
}
